
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<div class="gallery-carousel page-width">
  <div class="gallery-carousel__title">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="gallery-carousel__body multiple-items">
    {% for block in section.blocks %}
        <div class="slider">
          <!-- Fetch the image URL from the block settings -->
          <img src="{{ block.settings.image_with_text_image | img_url: 'medium' }}" alt="" width="500" height="500">
        </div>
      {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Gallery carousel",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Carousel title",
      "default":"Slider"
    }
  ],
  "blocks": [
    {
        "name": "slider images",
        "type":"slide",
        "settings": [
            {
                "type": "image_picker",
                "id": "image_with_text_image",
                "label": "Image"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Custom Gallery carousel"
    }
  ]
}
{% endschema %}

<script>
    $(document).ready(function(){
        $('.multiple-items').slick({
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 1
        });
    });
</script>